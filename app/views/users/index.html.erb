<div class="container">
  <div class="row">
    <div class="col-md-3" style="background-color:;">
      <%= render 'books/list', book: @book, user: current_user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
         <tr>
          <th>image</th>
          <th>name</th>
          <th></th>
         </tr>
        </thead>
        <tbody>
        <% @users.each do |user| %>
           <tr>
            <td>
              <p><%= image_tag user.get_profile_image(40,40) %></p>
            </td>
            <td>
              <p><%= user.name %></p>
            </td>
            <td>
              <p><%= link_to "Show", user_path(user.id) %></p>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
