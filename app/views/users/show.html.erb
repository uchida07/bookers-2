<div class="container">
  <div class="row">
    <div class="col-md-3" style="background-color:;">
      <%= render 'books/list', book: @book, user: @user %>
    </div>
    <div class="col-md-8 offset-md-1">

      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
          <td>
            <%= link_to user_path do %>
              <p><%= image_tag book.user.get_profile_image(40,40) %> </p>
            <% end %>
          </td>
          <td>
            <p><%= link_to book.title, book_path(book.id) %></p>
          </td>
          <td>
            <p><%= book.body %></p>
          </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
