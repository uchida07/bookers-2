<% if @user.errors.any? %>
  <%= @user.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<h2>User info</h2>
<%= form_with model: @user do |f| %>
  <div for="inputName">Name</div>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
  <h4>Introduction</h4>
  <%= f.text_field :introduction %>
  <div for="inputImage">Image</div>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
  <div class: "btn btn-success"><%= f.submit "Update User" %></div>
<% end %>