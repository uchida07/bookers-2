<% if flash[:notice] %>
  <p id="notice">
    <%= flash[:notice] %>
  </p>
<% end %>
<div>
  <% if book.errors.any? %>
  <%= book.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
  <h2>User info</h2>
  <%= image_tag user.get_profile_image(63,63) %>
  <table class="table">
    <thead>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
    </thead>
  </table>

</div>
  <%= link_to edit_user_path(user.id), class: 'btn btn-outline-secondary btn-sm btn-block' do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
<h1>New book</h1>
<%= form_with model: book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <div>
  <div class="btn btn-success"><%= f.submit 'Create Book' %></div>
  </div>
<% end %>
