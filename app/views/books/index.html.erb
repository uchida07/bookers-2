<div class="container">
  <div class="row">
    <div class="col-md-3" style="background-color:;">
      <%= render 'list', book: @book, user: current_user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(book.user.id) do %>
                <p><%= image_tag book.user.get_profile_image(40,40) %> </p>
              <% end %>
            </td>
            <td>
              <p><%= link_to book.title, book_path(book.id) %></p>
            </td>
            <td>
              <p><%= book.body %></p>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>